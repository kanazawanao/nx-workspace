{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@workspace/ui": ["libs/ui/src/index.ts"],
      "@workspace/shared-service": ["libs/shared-service/src/index.ts"],
      "@workspace/constants": ["libs/constants/src/index.ts"],
      "@workspace/client/features": ["libs/client/features/src/index.ts"],
      "@workspace/client-manager/features": [
        "libs/client-manager/features/src/index.ts"
      ],
      "@workspace/client-manager/guards": [
        "libs/client-manager/guards/src/index.ts"
      ],
      "@workspace/client/guards": ["libs/client/guards/src/index.ts"],
      "@workspace/client-manager/models": [
        "libs/client-manager/models/src/index.ts"
      ],
      "@workspace/client-manager/data-accesss": [
        "libs/client-manager/data-accesss/src/index.ts"
      ],
      "@workspace/client-manager/skill-types": [
        "libs/client-manager/skill-types/src/index.ts"
      ],
      "@workspace/client-manager/skills": [
        "libs/client-manager/skills/src/index.ts"
      ],
      "@workspace/client-manager/timelines": [
        "libs/client-manager/timelines/src/index.ts"
      ],
      "@workspace/client-manager/users": [
        "libs/client-manager/users/src/index.ts"
      ],
      "@workspace/client-manager/login": [
        "libs/client-manager/login/src/index.ts"
      ],
      "@workspace/shared/story-book": ["libs/shared/story-book/src/index.ts"],
      "@workspace/client/about": ["libs/client/about/src/index.ts"],
      "@workspace/client/timeline": ["libs/client/timeline/src/index.ts"],
      "@workspace/client/skill": ["libs/client/skill/src/index.ts"],
      "@workspace/client-manager/data-access": [
        "libs/client-manager/data-access/src/index.ts"
      ],
      "@workspace/tripig/sign-in": ["libs/tripig/sign-in/src/index.ts"],
      "@workspace/tripig/sign-up": ["libs/tripig/sign-up/src/index.ts"],
      "@workspace/tripig/map/point-search": [
        "libs/tripig/map/point-search/src/index.ts"
      ],
      "@workspace/tripig/map/route-search": [
        "libs/tripig/map/route-search/src/index.ts"
      ],
      "@workspace/tripig/guards": ["libs/tripig/guards/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
